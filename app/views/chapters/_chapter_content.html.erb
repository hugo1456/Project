<div class="panel panel-default chapter_info">
  <div class="panel-heading">
    <% if current_user?(@user) %>
      <div class="dropdown pull-right">
        <a href="#" class="menu dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <li> <%= link_to "Edit", "/editor" + request.fullpath, id: "edit_link", data: {save_url: chapter_path(@current_chapter)} %> </li>
          <li class="divider"></li>
          <li>
            <%= link_to "Delete", @current_chapter, method: :delete,
          	data: { confirm: "This can't be undone, are you sure?"},
            title: @current_chapter.name %>
          </li>
        </ul>
      </div>
    <% end %>
    <h3 class="panel-title" id="chapter_title" data-mercury="simple"><%= wrap(@current_chapter.name, 600) %></h3>
  </div>
  <div class="panel-body" id="chapter_content" data-mercury="full">
    <%= wrap(@current_chapter.content, 6000000000000000) %>
  </div>
</div>