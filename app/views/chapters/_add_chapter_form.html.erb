<div class="modal fade" id="add-chapter-form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title"> Add Chapter</h4>
      </div>
      <div class="modal-body">
         <div class="row">
           <div class="col-md-12">
              <%= form_for(:chapter, url: book_chapters_path(current_book), html: { class: "form-horizontal edit-form" }) do |f| %>

                <div class= "form-group"><%= f.text_field :name, placeholder: "Name This chapter", class: "form-control", autofocus: true %></div>

          </div>
        </div>
      </div>
      <div class="modal-footer">
                <%= f.submit "Create", class: "btn btn-default" %>
              <% end %>
      </div>
    </div>
  </div>
</div>