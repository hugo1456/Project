<% provide(:title, @title) %>
<div class= "row" >
  <div class= "col-md-3 text-left">
    <%= render 'shared/user_info' %>
  </div>
  <div class= "col-md-7 follow">
    <h1><%= @title %></h1>
    <% if @users.any? %>
      <%= render @users %>
      <%= will_paginate @users, param_name: 'users', renderer: BootstrapPagination::Rails, class: "pagination-centered" %>
    <% end %>
  </div>
  <%= render 'shared/advert' %>
</div>
