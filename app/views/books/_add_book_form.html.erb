<div class="modal fade" id="add-book-form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title"> Add new book</h4>
      </div>
      <div class="modal-body">
         <div class="row">
           <div class="col-md-12">
          <%= form_for(:book, url: collection_books_path(current_collection), html: { class: "form-horizontal collection-form" }) do |f| %>

          <div class= "form-group"><%= f.text_field :name, placeholder: "Name your book, max 50", maxlength: "50", class: "form-control", autofocus: true %></div>

          <div class= "form-group"><%= f.text_area :description, placeholder: "Add a litle description of your book..., max 500", rows: "3", maxlength: "500", cols: "60", wrap: "hard", class: "form-control" %></div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Create", class: "btn btn-default" %>
        <% end %>
      </div>
    </div>
  </div>
</div>